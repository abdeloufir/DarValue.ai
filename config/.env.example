# DarValue.ai Configuration
# Copy this to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/darvalue_db
DATABASE_ECHO=false

# Google Maps API (for enhanced geospatial data)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# AWS Configuration (for image storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=darvalue-images

# Google Cloud Configuration (alternative to AWS)
GCP_PROJECT_ID=your_gcp_project_id
GCP_BUCKET_NAME=darvalue-images
# For GCP credentials, set GOOGLE_APPLICATION_CREDENTIALS environment variable
# to point to your service account JSON file

# Scraping Configuration
SCRAPING_MAX_PAGES_PER_CITY=10
SCRAPING_MAX_WORKERS=4
SCRAPING_DELAY_BETWEEN_PLATFORMS=5
SCRAPING_ENABLE_HEADLESS=true

# Data Collection Settings
ENABLE_GEOSPATIAL_ENRICHMENT=true
ENABLE_IMAGE_DOWNLOAD=true
ENABLE_CLOUD_STORAGE=false
CLOUD_PROVIDER=aws

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} - {message}
LOG_ROTATION=1 week
LOG_RETENTION=30 days

# Monitoring and Alerts
ENABLE_MONITORING=false
PROMETHEUS_PORT=8000

# Application Settings
DEBUG=false
ENVIRONMENT=development